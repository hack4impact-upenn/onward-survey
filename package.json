{
  "name": "onward-survey",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "setup": "yarn install && yarn --cwd src/client install",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "server": "ts-node-dev --respawn src/index.ts",
    "client": "cd src/client && yarn start",
    "start": "ts-node ./src/index.ts",
    "build": "tsc",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
    "heroku-postbuild": "cd src/client && yarn install && yarn build"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": false,
    "modulePathIgnorePatterns": [
      "<rootDir>/src/client"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.2",
    "prettier": "2.1.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.3",
    "ts-node-dev": "^1.0.0-pre.49"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.0",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/express-status-monitor": "^1.2.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.157",
    "@types/mongoose": "^5.7.29",
    "@types/node": "^14.0.14",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-table": "^7.0.24",
    "@types/shortid": "^0.0.29",
    "@types/socket.io": "^2.1.8",
    "@types/uuid": "^8.3.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "bulma": "^0.9.1",
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-status-monitor": "^1.3.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "mongoose": "^5.9.21",
    "react-bulma-components": "^3.4.0",
    "react-router-dom": "^5.2.0",
    "react-table": "^7.6.1",
    "shortid": "^2.2.16",
    "socket.io": "^2.3.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
